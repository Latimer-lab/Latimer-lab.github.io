rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read all for leaderboard, but only write their own
    match /users/{userId} {
      allow read: if true;  // Public read for leaderboard
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Usernames collection - only authenticated users can check availability
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Public read access for main content collections
    match /prompts/{document} {
      allow read: if true;  // Anyone can view prompts/branches
      allow write: if request.auth != null;  // Only authenticated users can create/edit
    }
    
    match /evaluations/{document} {
      allow read: if true;  // Anyone can view evaluations
      allow write: if request.auth != null;  // Only authenticated users can create/edit
    }
    
    match /leaderboard/{document} {
      allow read: if true;  // Anyone can view leaderboard
      allow write: if request.auth != null;  // Only authenticated users can update scores
    }
    
    // Point events and prompt files
    match /point_events/{document} {
      allow read: if request.auth != null && request.auth.uid == resource.data.user_id; // Users can read their own events
      allow create: if request.auth != null;  // Engine writes events
      allow update, delete: if false;  // Immutable
    }

    match /prompt_files/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Engine/UI writes limited files
    }

    match /archive/{document} {
      allow read: if true;  // Anyone can view archive
      allow write: if request.auth != null;  // Only authenticated users can add to archive
    }
    
    // Public read access for certain collections (adjust based on your needs)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Messages collection - authenticated users can read, only owners can write
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Evaluation requests - PUBLIC READ for everyone, authenticated WRITE only
    match /evaluation_requests/{id} {
      allow read: if true;  // Anyone can view requests
      allow create: if request.auth != null;
    }
    
    // Branches (used as fallback in UI)
    match /branches/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
